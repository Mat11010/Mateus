int a, b, c;
Console.WriteLine("Escreva três números inteiros");
a = int.Parse(Console.ReadLine());
b = int.Parse(Console.ReadLine());
c = int.Parse(Console.ReadLine());

if (a > b)
{
    a = a + b;
    b = a - b;
    a = a - b;
}

if (a > c)
{
    a = a + c;
    c = a - c;
    a = a - c;
}
if (b > c)
{
    b = b + c;
    c = b - c;
    b = b - c;
}
Console.WriteLine("Os números em ordem crescente são: {0}, {1}, {2}", a, b, c);
